
; top-most editor config file
root = true

; unix-style newlines globally
[*]
end_of_line = lf

; use same config for php, yaml, json, xml, and ini files
[*.php,*.yml,*.yaml,*.json,*.xml,.editorconfig,.env,.env.dist,.gitignore,.php_cs.dist,phpunit.xml.dist]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
charset = utf-8

; markdown uses slightly different config
[*.md]
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
